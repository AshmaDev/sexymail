{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": "./src",
      "sourceMap": true,
      "declaration": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "strict": true,
    },
    "includes": [
      "./src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "tests"
    ]
  }